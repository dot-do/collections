{
  "name": "collections.do",
  "version": "0.1.0",
  "description": "Managed document collections service with MongoDB-style queries",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "bin": {
    "collections.do": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "build:core": "cd core && pnpm build",
    "build:all": "pnpm build:core && pnpm build",
    "dev": "wrangler dev",
    "dev:watch": "tsup --watch",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:all": "pnpm test && cd core && pnpm test",
    "test:e2e": "node --env-file=.env node_modules/vitest/vitest.mjs run --config e2e/vitest.config.ts",
    "test:e2e:workers": "vitest run --config e2e/workers/vitest.config.ts",
    "typecheck": "wrangler types && tsc --noEmit",
    "typecheck:core": "cd core && tsc --noEmit",
    "typecheck:all": "pnpm typecheck:core && pnpm typecheck",
    "check:publish": "node -e \"const pkg = require('./package.json'); const deps = JSON.stringify(pkg.dependencies || {}); if (deps.includes('workspace:')) { console.error('ERROR: workspace: protocol found in dependencies. Replace with actual versions before publishing.'); process.exit(1); }\"",
    "prepublishOnly": "pnpm check:publish && pnpm build && pnpm test",
    "release": "pnpm build && changeset publish",
    "version": "changeset version"
  },
  "keywords": [
    "collections",
    "mongodb",
    "document-store",
    "durable-objects",
    "cloudflare",
    "workers",
    "sqlite",
    "nosql",
    "managed-service"
  ],
  "author": {
    "name": "Platform.do",
    "email": "npm@platform.do",
    "url": "https://platform.do"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dot-do/collections.do.git"
  },
  "bugs": {
    "url": "https://github.com/dot-do/collections.do/issues"
  },
  "homepage": "https://collections.do",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@dotdo/collections": "link:./core",
    "@dotdo/types": "0.1.1",
    "hono": "^4.0.0"
  },
  "peerDependencies": {
    "rpc.do": ">=0.2.0"
  },
  "peerDependenciesMeta": {
    "rpc.do": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20250121.0",
    "@types/node": "^25.0.10",
    "tsup": "^8.0.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8",
    "wrangler": "^4.0.0"
  }
}
